<style>
    /* General Page Styling */
    body {
        font-family: 'Roboto', sans-serif;
        background: linear-gradient(to right, #e39fca, #f8f4cd); /* Soft pink to light yellow gradient */
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
    }
  
    /* Container Styling */
    .container {
        background: #ffffff; /* Light pastel pink background */
        padding: 2.5rem;
        border-radius: 15px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        text-align: center;
        width: 90%;
        max-width: 500px;
        animation: fadeIn 1s ease-in-out;
    }
  
    /* Welcome Message Styling */
    h1 {
        font-size: 26px;
        color: #060529; /* Vibrant purple for the title */
        font-weight: 700;
        margin-bottom: 1.5rem;
    }
  
    /* Table Styling */
    table {
        width: 100%;
        border-spacing: 0;
        margin-bottom: 1.5rem;
    }
  
    table td {
        padding: 1rem;
        font-size: 16px;
        color: #4d4d4d; /* Neutral dark gray for text */
        border-bottom: 1px solid #ffb3c1; /* Light pink border for rows */
        text-align: left;
    }
  
    table td:first-child {
        font-weight: bold;
        color: #ff6f61; /* Coral color for labels */
    }
  
    table tr:last-child td {
        border-bottom: none;
    }
  
    /* Buttons Styling */
    .button-group a {
        text-decoration: none;
        display: inline-block;
        padding: 0.8rem 1.5rem;
        margin: 0.5rem;
        font-size: 15px;
        font-weight: 600;
        border-radius: 25px;
        color: #ffffff;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }
  
    /*.button-group a.edit-btn {
        background-color: #f5a021; /* Bright orange for the edit button */
    
  
    .button-group a.edit-btn:hover {
        background-color: #86e4f7; /* Coral shade on hover */
        transform: translateY(-2px);
    }
  
    .button-group a.logout-btn {
        background-color: #75c6f8; /* Vibrant pink for logout */
    }
  
    .button-group a.logout-btn:hover {
        background-color: #79cafc; /* Redder shade for hover */
        transform: translateY(-2px);
    }
  
    /* Fade-in Animation */
    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
  
    /* Responsive Design */
    @media screen and (max-width: 768px) {
        .container {
            padding: 2rem;
        }
  
        h1 {
            font-size: 22px;
        }
  
        table td {
            font-size: 14px;
        }
  
        .button-group a {
            font-size: 14px;
            padding: 0.6rem 1.2rem;
        }
    }
  </style>
  

<div class="container">
    <% include('../layouts/header.ejs') %>
  
    <h1>Welcome to Homepage, <%= user.name %>!</h1>
  
    <table>
        <tr>
            <td>Email:</td>
            <td><%= user.email %></td>
        </tr>
        <tr>
            <td>Mobile:</td>
            <td><%= user.mobile %></td>
        </tr>
    </table>
  
    <div class="button-group">
        <!-- <a href="/edit?id=<%= user._id %>" class="edit-btn">Edit</a> -->
        <a href="/logout" class="logout-btn">Logout</a>
    </div>
  
    <% include('../layouts/footer.ejs') %>
  </div>