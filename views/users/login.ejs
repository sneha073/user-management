<style>
    body {
        margin: 0;
        padding: 0;
        font-family: 'Poppins', sans-serif;
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background: linear-gradient(135deg, #e09bc8, #ecbce0);
        overflow: hidden;
        position: relative;
    }

    .animated-bg {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
        overflow: hidden;
    }

    .animated-bg span {
        position: absolute;
        display: block;
        width: 100px;
        height: 100px;
        background: rgba(240, 240, 240, 0.4);
        animation: move 15s infinite;
        border-radius: 50%;
    }

    .animated-bg span:nth-child(1) {
        top: 15%;
        left: 5%;
        animation-delay: 0s;
        width: 130px;
        height: 130px;
    }

    .animated-bg span:nth-child(2) {
        top: 65%;
        left: 15%;
        animation-delay: 3s;
    }

    .animated-bg span:nth-child(3) {
        top: 30%;
        left: 55%;
        animation-delay: 6s;
    }

    .animated-bg span:nth-child(4) {
        top: 5%;
        left: 75%;
        animation-delay: 9s;
        width: 150px;
        height: 150px;
    }

    @keyframes move {
        0% {
            transform: translateY(0px) rotate(0deg);
        }
        50% {
            transform: translateY(-25px) rotate(180deg);
        }
        100% {
            transform: translateY(0px) rotate(360deg);
        }
    }

    /* Login container styling */
    .login-container {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 20px;
        padding: 2rem;
        box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.1);
        text-align: center;
        width: 90%;
        max-width: 400px;
        animation: slide-in 1s ease forwards;
        transform: translateY(50px);
        opacity: 0;
    }

    @keyframes slide-in {
        to {
            transform: translateY(0px);
            opacity: 1;
        }
    }

    h1 {
        font-size: 2.5rem;
        color: #4a5568;
        margin-bottom: 1rem;
        text-transform: uppercase;
    }

    h4 {
        color: #e53e3e;
        margin-bottom: 1rem;
        font-size: 1rem;
    }

    form input[type="email"],
    form input[type="password"] {
        width: 100%;
        padding: 1rem;
        margin-bottom: 1rem;
        border: 1px solid #cbd5e0;
        border-radius: 10px;
        font-size: 1rem;
        outline: none;
        transition: all 0.3s ease-in-out;
    }

    form input[type="email"]:focus,
    form input[type="password"]:focus {
        border-color: #4299e1;
        box-shadow: 0 0 8px rgba(66, 153, 225, 0.5);
    }

    form input[type="submit"] {
        width: 100%;
        padding: 1rem;
        background: linear-gradient(135deg, #f490c2, #f757b7);
        color: white;
        border: none;
        border-radius: 10px;
        font-size: 1rem;
        cursor: pointer;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    form input[type="submit"]:hover {
        transform: translateY(-3px);
        box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.1);
    }

    a {
        display: inline-block;
        margin-top: 1rem;
        text-decoration: none;
        color: #4299e1;
        font-size: 0.9rem;
        transition: color 0.2s ease;
    }

    a:hover {
        color: #2b6cb0;
    }

    /* Responsive Design */
    @media screen and (max-width: 768px) {
        .login-container {
            padding: 1.5rem;
        }

        h1 {
            font-size: 1.8rem;
        }

        form input[type="email"],
        form input[type="password"],
        form input[type="submit"] {
            font-size: 0.9rem;
        }
    }
</style>



<div class="animated-bg">
    <span></span>
    <span></span>
    <span></span>
    <span></span>
</div>

<div class="login-container">
    <% include('../layouts/header.ejs') %>

    <h1>Login</h1>

    <% if (typeof message !== "undefined") { %>
        <h4><%= message %></h4>
    <% } %>

    <form action="/login" method="post" onclick="return validateForm()">
        <input type="email" name="email" id="email" placeholder="Enter email">
        <input type="password" name="password" id="password" placeholder="Enter password">
        <input type="submit" value="Login">
    </form>
    <p id="error-message" style="color:red;"></p>
    <!-- <a href="/forgot-password">Forgot password?</a> -->

    <script>
        function validateForm() {
          let email = document.getElementById("email").value;
          let password = document.getElementById("password").value.trim();
          let errorMessage = document.getElementById("error-message");
    
          if (!email) {
            errorMessage.textContent = "Please enter email.";
            return false;
          }

          if (!password) {
            errorMessage.textContent = "Please enter password";
            return false;
          }
    
          errorMessage.textContent = "";
          return true;
        }
      </script>
    
    <% include('../layouts/footer.ejs') %>
</div>

